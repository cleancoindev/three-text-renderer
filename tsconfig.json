{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "dist",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/index.ts", "examples/**/*", "typings"],
  "exclude": [".git", "node_modules"]
}
